{
  "name": "typescript-api-skeleton",
  "version": "1.0.0",
  "description": "description",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev $NODE_DEBUG_OPTION -r tsconfig-paths/register src/server.ts",
    "start": "npm run build && node -r module-alias/register dist/server.js",
    "debug": "node -r module-alias/register -r ts-node/register --nolazy --inspect dist/server.js",
    "test": "npm run lint && npm run build && jest $NODE_DEBUG_OPTION --detectOpenHandles --forceExit --coverage --verbose",
    "build": "tsc",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint-fix": "tslint -c tslint.json --fix -p tsconfig.json"
  },
  "scripts-info": {
    "dev": "Start and watch development server using ts compilation on the fly",
    "start": "Start server",
    "debug": "Debug code (using ts-node)",
    "build": "Clean and rebuild the project",
    "test": "Lint and unit test the project",
    "lint": "Lint the project source files",
    "lint-fix": "Lint and fix project source files"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DavidHavl/typescript-api-skeleton"
  },
  "keywords": [
    "api",
    "Node.js",
    "typescript"
  ],
  "author": "David Havl",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "dotenv": "^7.0.0",
    "escape-html": "^1.0.3",
    "express": "^4.16.4",
    "express-async-errors": "^3.1.1",
    "helmet": "3.16.0",
    "joi": "^14.3.1",
    "module-alias": "^2.2.0",
    "morgan": "^1.9.1",
    "npm": "^6.9.0",
    "pretty-error": "^2.1.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.3.3"
  },
  "devDependencies": {
    "@types/compression": "^0.0.36",
    "@types/dotenv": "^6.1.0",
    "@types/escape-html": "^0.0.20",
    "@types/express": "^4.16.1",
    "@types/helmet": "^0.0.43",
    "@types/jest": "^24.0.11",
    "@types/jest-diff": "^20.0.1",
    "@types/joi": "^14.3.1",
    "@types/morgan": "^1.7.35",
    "@types/node": "^11.11.4",
    "@types/sinon": "^7.0.10",
    "@types/supertest": "^2.0.7",
    "inversify": "^5.0.1",
    "jest": "^24.5.0",
    "node-mocks-http": "^1.7.3",
    "reflect-metadata": "^0.1.13",
    "sinon": "^7.3.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "ts-node-dev": "^1.0.0-pre.32",
    "tsc": "^1.20150623.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "^5.14.0"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
